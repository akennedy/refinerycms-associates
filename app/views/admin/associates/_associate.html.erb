<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(associate) -%>">
  <span class='title'>
    <%= associate.name %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), associate_path(associate),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_associate_path(associate),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_associate_path(associate),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => associate.name),
        :method => :delete %>
  </span>
</li>
